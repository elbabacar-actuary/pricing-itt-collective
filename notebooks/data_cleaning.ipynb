import pandas as pd
from datetime import datetime

# Load raw data
df_raw = pd.read_csv("../data/simulated/claims_raw_simulated.csv")

df = df_raw.copy()

# -----------------------
# Standardize column names
# -----------------------
df.columns = (
    df.columns
    .str.strip()
    .str.lower()
    .str.replace(" ", "_")
)

# -----------------------
# Clean salary
# -----------------------
df["annual_salary"] = (
    df["annual_salary_raw"]
    .astype(str)
    .str.replace("â‚¬", "", regex=False)
    .str.replace("EUR", "", regex=False)
    .str.replace(",", "", regex=False)
    .str.replace(" ", "", regex=False)
)

df["annual_salary"] = pd.to_numeric(df["annual_salary"], errors="coerce")

# -----------------------
# Parse dates
# -----------------------
df["date_of_birth"] = pd.to_datetime(
    df["date_of_birth"], errors="coerce"
)

df["claim_start_date"] = pd.to_datetime(
    df["claim_start_date_raw"], errors="coerce"
)

# -----------------------
# Clean duration
# -----------------------
df["claim_duration_days"] = pd.to_numeric(
    df["claim_duration_days_raw"], errors="coerce"
)

# -----------------------
# Calculate age at claim
# -----------------------
df["age_at_claim"] = (
    (df["claim_start_date"] - df["date_of_birth"])
    .dt.days / 365.25
)

# -----------------------
# Remove duplicates
# -----------------------
df = df.drop_duplicates(
    subset=["insured_id", "claim_start_date", "claim_duration_days"]
)

# -----------------------
# Filter unrealistic ages
# -----------------------
df = df[
    (df["age_at_claim"] >= 18) &
    (df["age_at_claim"] <= 70)
]

# -----------------------
# Remove rows with critical missing values
# -----------------------
df = df.dropna(
    subset=[
        "annual_salary",
        "claim_start_date",
        "claim_duration_days",
        "daily_benefit_raw",
        "age_at_claim"
    ]
)

# -----------------------
# Save cleaned data
# -----------------------
df.to_csv(
    "../data/processed/claims_cleaned.csv",
    index=False
)

